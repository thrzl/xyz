---
import HTML from "@layouts/HTML.astro";
import Link from "@components/Link.astro";
import { posts } from "@lib/garden";
import dayjs from "dayjs";
---

<HTML>
    <p>blog</p>
    <p>a collection of notes. largely opinions or project logs</p>
    <div class="mb-4">
        {
            posts.map((post) => (
                <div class="my-4">
                    <Link class="mb-0" href={`/garden/${post.data.slug}`}>
                        {post.data.title}
                    </Link>{" "}
                    <span class="op-50">
                        Â·{" "}
                        {dayjs(post.data.date)
                            .format("MMM DD, YYYY")
                            .toLocaleLowerCase()}
                    </span>
                    <p class="my-1">{post.data.description}</p>
                </div>
            ))
        }
    </div>
</HTML>
