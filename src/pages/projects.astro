    },
];
---

<HTML>
    <main class="w-1/3">
        <p>featured projects</p>
        {
            projects.map((project) => (
                <div class="my-4">
                    <a href={project.href}>{project.name}</a>
                    {project.tags && <span>Â· {project.tags.join(" / ")}</span>}
                    <p class="my-1">{project.description}</p>
                </div>
            ))
        }
        <Links />
    </main>
</HTML>
